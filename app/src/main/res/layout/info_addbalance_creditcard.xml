<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background" >

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_img_height"
        android:background="@drawable/header_img_addcurrency" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header_img"
        android:fillViewport="true"
        android:gravity="center_horizontal"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/addbalance_linear_parent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_twenty"
            android:paddingLeft="@dimen/padding_twenty"
            android:paddingRight="@dimen/padding_twenty" >

            <TextView
                android:id="@+id/add_balance_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top_twenty"
                android:gravity="center"
                android:text="@string/select_amount" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_five"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange_color"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_two" >

                    <Button
                        android:id="@+id/btn_value1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/check_orange_selector"
                        android:padding="13dp"
                        android:text="$5" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange_color"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_two" >

                    <Button
                        android:id="@+id/btn_value2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/check_orange_selector"
                        android:padding="@dimen/padding_thirteen"
                        android:text="$10" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange_color"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_two" >

                    <Button
                        android:id="@+id/btn_value3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/check_orange_selector"
                        android:padding="13dp"
                        android:text="$20" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange_color"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_two" >

                    <Button
                        android:id="@+id/btn_value4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/check_orange_selector"
                        android:padding="13dp"
                        android:text="$40" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_five"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_check_amount"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="$15" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_background" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_check_amount"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="$25" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_background" />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_check_amount"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="$35" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/main_background" />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_check_amount"
                    android:button="@android:color/transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="$45" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top_ten"
                android:background="#faa92e"
                android:orientation="vertical"
                android:padding="@dimen/padding_ten" >

                <EditText
                    android:id="@+id/editHideFocus"
                    android:layout_width="0dp"
                    android:layout_height="0dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff" >

                    <TextView
                        android:id="@+id/addbalance_edit_eOtherAmount_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_top_five"
                        android:paddingRight="@dimen/margin_top_five"
                        android:text="@string/other_amount"
                        android:textColor="@color/main_background" />

                    <EditText
                        android:id="@+id/addbalance_edit_eOtherAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:imeOptions="actionDone"
                        android:inputType="none"
                        android:maxLength="3"
                        android:maxLines="2"
                        android:minHeight="50dp"
                        android:paddingLeft="@dimen/padding_five"
                        android:paddingRight="@dimen/padding_five"
                        android:scrollHorizontally="false"
                        android:tag="addbalance_edit_eOtherAmount_hint"
                        android:textCursorDrawable="@null" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_current_creditcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_ten"
                android:background="@drawable/btn_orange_light_selector"
                android:orientation="horizontal"
                android:padding="@dimen/padding_fifteen" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/margin_top_ten"
                    android:src="@drawable/rounded_check_orange" />

                <TextView
                    android:id="@+id/text_current_creditcard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_addnew_creditcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_ten"
                android:background="@drawable/btn_orange_selector"
                android:padding="@dimen/padding_fifteen"
                android:text="@string/add_new_credit_card" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>