<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/facebook_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/imagecontent"
        android:scaleType="fitXY"
        android:src="@drawable/fbhearer"
        android:visibility="gone" />

    <TextView
        android:id="@+id/facebook_text_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_header"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:background="#0ff8"
        android:paddingLeft="5dp"
        android:text="Post to Your Wall"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/facebook_text_mind_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <EditText
            android:id="@+id/twitter_edit_message"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/butn_editbg"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:maxLength="200"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:textColor="#000000"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/facebook_text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_text_mind_lin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="4dp"
        android:background="#0ff8"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/app_name"
        android:textColor="#883"
        android:textSize="18dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebook_text_mind_lin"
        android:layout_centerHorizontal="true"
        android:background="#777777"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/twitter_but_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/twitter_but_tweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Publish" />
    </LinearLayout>

</RelativeLayout>