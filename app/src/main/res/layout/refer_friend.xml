<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/main_background" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_img_height"
        android:background="@drawable/header_img_refer_a_friend" />

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_top_ten"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/referFriendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_ten"
            android:singleLine="false"
            android:text="@string/REFER_A_FRIEND"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/connect_with_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:singleLine="false"
            android:text="@string/CONNECT_WITH_YOUR_FRIENDS"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/share_your_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_top_ten"
            android:layout_marginBottom="@dimen/margin_top_ten"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:text="@string/share_your_code_with_your_friends"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/copy_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_top_ten"
            android:background="@drawable/box_code"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_thirty"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_five"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/code_copied_to_clipboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/code"
                android:layout_marginBottom="@dimen/margin_top_ten"
                android:layout_marginTop="@dimen/margin_top_thirty"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_five"
                android:text="@string/TAP_CODE_TO_COPY"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/body" >

        <ImageView
            android:id="@+id/shareMailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_top_five"
            android:layout_weight="1"
            android:src="@drawable/share" />
    </LinearLayout>

</RelativeLayout>